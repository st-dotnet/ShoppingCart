@model IEnumerable<ShoopingProject.Models.ProductCategoryModel>
    <html>
    <head>
        <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }
        </style>
    </head>
    <body>

        <h2>Product Categories</h2>

        <table>
            <tr>
                <th>Category</th>
            </tr>
            @foreach (var item in ViewBag.Data)
            {
                <tr>
                    <td>@item.Name</td>
                </tr>
            }

        </table>
    </body>
</html>


